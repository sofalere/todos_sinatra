<ul id="lists">
  <% sort_lists(@lists) do |list, id| %>
      <li class="<%= list_class(list) %>">
        <a href="/lists/<%= id %>">
          <h2><%= list[:name] %></h2>
          <p><%= display_todo_counter(list) %></p>
        </a>
      </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>